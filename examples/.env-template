# MongoDB MCP Server Environment Variables
# Copy this file to .env and fill in your actual values

# Configuration file location (optional)
# MONGO_MCP_CONFIG=/path/to/your/connections.json

# Response Size Limits (optional)
# Maximum response size in MB before auto-truncation (default: 10)
MAX_RESPONSE_SIZE_MB=10
# Warning threshold in MB (default: 5)
WARNING_RESPONSE_SIZE_MB=5
# Maximum number of documents to show in response (default: 100)
MAX_RESPONSE_DOCUMENTS=100

# Development Environment
MONGO_DEV_HOST=localhost
MONGO_DEV_PORT=27018
MONGO_DEV_DATABASE=your_dev_database
MONGO_DEV_USER=your_dev_username
MONGO_DEV_PASS=your_dev_password
MONGO_DEV_AUTH_SOURCE=your_dev_database

# Production Environment (use with caution)
MONGO_PROD_HOST=localhost
MONGO_PROD_PORT=27020
MONGO_PROD_DATABASE=your_prod_database
MONGO_PROD_USER=your_prod_username
MONGO_PROD_PASS=your_prod_password
MONGO_PROD_AUTH_SOURCE=admin

# Additional environments as needed
# MONGO_UAT_HOST=...
# MONGO_UAT_PORT=...
# etc.